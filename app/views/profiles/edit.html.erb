<section class="features-icons bg-light text-center">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="icon-layers m-auto text-primary"></i>
            </div>

<% if @user.errors.any?  %>
 <div id="error explanation">
 <h2>We found a few errors in your form:</h2>
 <ul>
 <% @user.errors.full_messages.each do |message| %>
   <li><%= message %></li>
 <% end  %>
 </ul>
<% end %>

<h3>Edit Profile:</h3>


<%= form_for @user, url: user_workouts_profiles_update_path, method: :post do |f| %>
<div class="form-group">
<%= f.label :name, "Name:" %><br>
<%= f.text_field :name %>
</div>
<div class="form-group">
<%= f.label :url, "URL:" %><br>
<%= f.text_field :url %>
</div>
<div class="form-group">
<%= f.label :bio, "Bio:" %><br>
<%= f.text_area :bio, maxlength: 200 %>
</div>
<div class="form-group">
<%= f.submit "Update Profile" %>
</div>
<% end  %>
<br>

<h4 class="workout-subtitle"> Delete A Workout:</h4>

<% @workouts.each do |workout| %>
  <div class="workout">
   <p><%= link_to workout.title, user_workout_path(@user.id, workout.id) %>
   <%= form_tag user_workout_path(workout.user, workout.id), method: "delete" do %>
<%= submit_tag "Delete" %></p>
  <% end %>
  </div>
<% end %>
</div>
</div>

</div>
</div>
</div>
</section>
