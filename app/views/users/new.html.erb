<div class="container">


<% if flash[:message] %>
  <%=  flash[:message].each do |message| %>
  <div class="text-center">
    <%= message %>
  </div>
  <% end %>
<% end  %>

<div class="row form-group justify-center-content">
  <div class="col-sm-12 col-md-12 col-lg-12 offset-sm-4 offset-md-4 offset-lg-4 text-center mx-auto ">
    <%= form_for @user, url: users_path do |f| %>

  <div class="form-group">
    <%= label_tag :name, "Name:" %><br>
    <%= f.text_field :name%>
  </div>
  <div class="form-group">
    <%= label_tag :username, "Username:" %><br>
    <%= f.text_field :username %>
  </div>
  <div class="form-group">
    <%= label_tag :password, "Password:" %><br>
    <%= f.password_field :password %>
  </div>
  <div class="form-group">
    <label>Password Confirmation:</label><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="form-group">
    <%= label_tag :url, "URL:" %><br>
    <%= f.text_field :url %>
  </div>
  <div class="form-group">
    <%= label_tag :phone, "Phone:" %><br>
    <%= f.telephone_field :phone %>
  </div>
  <div class="form-group">
    <%= label_tag :bio, "Bio:" %><br>
    <%= f.text_area :bio, maxlength: 200 %>
  </div>
  <div class="form-group">
    <%= label_tag :img, "Photo:" %><br>
    <%= f.text_field :img %>
  </div>
    <%= f.submit "Create Account"%>

  <% end %>

  </div>
</div>
</div>
